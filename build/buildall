# macro call to another more specific script

# Usage
# ./buildall <os_type> [Debug|Release]
# Debug is optional

if [ -z $2 ] # empty string
then
	Build_Type="Release"
else
	Build_Type="$2"
fi

premake4 gmake

pushd gmake/  > /dev/null
	if [ $Build_Type == "Release" ] # empty string
	then
		make config=release
	else
		make config=debug
	fi
popd > /dev/null
