<SteerSuiteSubSpace xmlns="http://www.magix.ucla.edu/steerbench"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://www.magix.ucla.edu/steerbench 
                                        TestCaseSchema.xsd"
                    SubSpaceSamples="10">

  <header>
    <version>1.1</version>
    <name>hallway-one-way</name>
    <worldBounds>
      <xmin>-100</xmin>
      <xmax>100</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-100</zmin>
      <zmax>100</zmax>
    </worldBounds>
  </header>
  
  <suggestedCameraView>
    <position> <x>0</x> <y>100</y> <z>-30</z> </position>
    <lookat> <x>0</x> <y>0</y> <z>0</z> </lookat>
    <up> <x>0</x> <y>1</y> <z>0</z> </up>
    <fovy>45</fovy>
  </suggestedCameraView>

  <obstacle>
    <xmin>-100</xmin>
    <xmax>100</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>5.01</zmin>
    <zmax>20</zmax>
  </obstacle>

  <obstacle>
    <xmin>-100</xmin>
    <xmax>100</xmax>
    <ymin>0</ymin>
    <ymax>1</ymax>
    <zmin>-20</zmin>
    <zmax>-5</zmax>
  </obstacle>

  <agentRegion>
    <numAgents>100</numAgents>
    <regionBounds>
      <xmin>0</xmin>
      <xmax>50</xmax>
      <ymin>0</ymin>
      <ymax>0</ymax>
      <zmin>-7</zmin>
      <zmax>7</zmax>
    </regionBounds>
    <initialConditions>
      <direction> <x>1</x> <y>0</y> <z>0</z> </direction>
      <radius>0.5</radius>
      <speed>1.2</speed>
    </initialConditions>
    <goalSequence>
      <seekAxisAlignedBoxRegion>
        <targetLocation> <x>-15</x> <y>0</y> <z>0</z> </targetLocation>
        <desiredSpeed>1.3</desiredSpeed>
        <timeDuration>1000.0</timeDuration>
        <goalRegionBounds>
	      <xmin>-17</xmin>
	      <xmax>-13</xmax>
	      <ymin>0</ymin>
	      <ymax>0</ymax>
	      <zmin>-2</zmin>
	      <zmax>2</zmax>
	    </goalRegionBounds>
      </seekAxisAlignedBoxRegion>
    </goalSequence>

  </agentRegion>

</SteerSuiteSubSpace>
