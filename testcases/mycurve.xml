                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.magix.ucla.edu/steerbench 
                                       TestCaseSchema.xsd">

 <header>
   <version>1.0</version>
   <name>mycurve</name>
